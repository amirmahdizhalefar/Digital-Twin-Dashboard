  "panels": [
    {
      "type": "timeseries",
      "title": "Solar Power – Last 24 Hours",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "custom": { "fillOpacity": 15 }
        }
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"solar_twin\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"solar_measurement\" and r._field == \"power_w\")\n  |> aggregateWindow(every: 5m, fn: mean, createEmpty: false)",
          "datasource": null
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Irradiance and Cell Temperature",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "fieldConfig": {
        "defaults": {
          "custom": { "fillOpacity": 10 }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "irradiance" },
            "properties": [
              { "id": "unit", "value": "wattpm2" },
              { "id": "custom.axisPlacement", "value": "left" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "temp_cell" },
            "properties": [
              { "id": "unit", "value": "celsius" },
              { "id": "custom.axisPlacement", "value": "right" }
            ]
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"solar_twin\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"solar_measurement\")\n  |> filter(fn: (r) => r._field == \"irradiance\" or r._field == \"temp_cell\")\n  |> aggregateWindow(every: 5m, fn: mean, createEmpty: false)\n  |> pivot(rowKey: [\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> keep(columns: [\"_time\", \"irradiance\", \"temp_cell\"])",
          "datasource": null
        }
      ]
